{
    "name": "@cartesi/cli",
    "version": "1.2.0",
    "description": "Cartesi CLI",
    "author": "Danilo Tuler <tuler@pobox.com>",
    "bin": {
        "cartesi": "./bin/run.js"
    },
    "type": "module",
    "homepage": "https://github.com/cartesi/cli",
    "license": "Apache-2.0",
    "exports": "./dist/index.js",
    "repository": "cartesi/cli",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@inquirer/confirm": "^5.0.0",
        "@inquirer/core": "^10.0.0",
        "@inquirer/input": "^4.0.0",
        "@inquirer/select": "^4.0.0",
        "@inquirer/type": "^3.0.0",
        "@oclif/core": "^4.0.29",
        "@oclif/plugin-help": "^6.2.15",
        "@oclif/plugin-plugins": "^5.4.15",
        "bytes": "^3.1.2",
        "chalk": "^5.3.0",
        "cli-table3": "^0.6.5",
        "execa": "^9.4.1",
        "fs-extra": "^11.2.0",
        "giget": "^1.2.3",
        "lookpath": "^1.2.2",
        "open": "^10.1.0",
        "ora": "^8.1.0",
        "progress-stream": "^2.0.0",
        "semver": "^7.6.3",
        "tmp": "^0.2.3",
        "viem": "^2.21.27"
    },
    "devDependencies": {
        "@cartesi/devnet": "workspace:*",
        "@cartesi/eslint-config": "workspace:*",
        "@sunodo/wagmi-plugin-hardhat-deploy": "^0.3.0",
        "@types/bytes": "^3.1.4",
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^22.7.6",
        "@types/node-fetch": "^2.6.11",
        "@types/progress-stream": "^2.0.5",
        "@types/prompts": "^2.4.9",
        "@types/semver": "^7.5.8",
        "@types/tmp": "^0.2.6",
        "@vitest/coverage-istanbul": "^2.1.3",
        "@wagmi/cli": "^2.1.16",
        "copyfiles": "^2.4.1",
        "eslint": "^8.57.0",
        "eslint-config-oclif": "^5.2.1",
        "eslint-config-oclif-typescript": "^3.1.12",
        "npm-run-all": "^4.1.5",
        "oclif": "^4.15.9",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsconfig": "workspace:*",
        "tslib": "^2.8.0",
        "typescript": "^5.6.3",
        "vitest": "^2.1.3"
    },
    "oclif": {
        "bin": "cartesi",
        "dirname": "cartesi",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help"
        ],
        "topicSeparator": " ",
        "macos": {
            "identifier": "io.cartesi.cli"
        }
    },
    "scripts": {
        "build": "run-s clean codegen compile copy-files",
        "clean": "rimraf dist",
        "codegen": "run-p codegen:wagmi",
        "codegen:wagmi": "wagmi generate",
        "compile": "tsc -b",
        "copy-files": "copyfiles -u 1 \"src/**/*.yaml\" \"src/**/*.env\" \"src/**/*.txt\" dist",
        "lint": "eslint \"src/**/*.ts*\"",
        "postpack": "rimraf oclif.manifest.json",
        "posttest": "pnpm lint",
        "prepack": "pnpm build && oclif manifest",
        "test": "vitest",
        "test:coverage": "vitest --coverage.enabled true"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "bugs": "https://github.com/cartesi/cli/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
