{
    "name": "@cartesi/cli",
    "version": "0.14.0",
    "description": "Cartesi CLI",
    "author": "Danilo Tuler <tuler@pobox.com>",
    "bin": {
        "cartesi": "./bin/run.js"
    },
    "type": "module",
    "homepage": "https://github.com/cartesi/cli",
    "license": "Apache-2.0",
    "exports": "./dist/index.js",
    "repository": "cartesi/cli",
    "files": [
        "/bin",
        "/dist",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "dependencies": {
        "@inquirer/confirm": "^3.1.6",
        "@inquirer/core": "^8.1.0",
        "@inquirer/input": "^2.1.6",
        "@inquirer/select": "^2.3.2",
        "@inquirer/type": "^1.3.1",
        "@oclif/core": "^3.26.5",
        "@oclif/plugin-help": "^6.0.21",
        "@oclif/plugin-plugins": "^5.0.17",
        "bytes": "^3.1",
        "chalk": "^5.3.0",
        "execa": "^8.0",
        "fs-extra": "^11",
        "giget": "^1.2.3",
        "lookpath": "^1.2.2",
        "open": "^10.1.0",
        "ora": "^8.0.1",
        "progress-stream": "^2.0",
        "semver": "^7.5",
        "tmp": "^0.2.3",
        "viem": "^2.9.29"
    },
    "devDependencies": {
        "@cartesi/devnet": "workspace:*",
        "@cartesi/eslint-config": "workspace:*",
        "@sunodo/wagmi-plugin-hardhat-deploy": "^0.3.0",
        "@types/bytes": "^3.1",
        "@types/fs-extra": "^11",
        "@types/inquirer": "^9",
        "@types/node": "^20.12.7",
        "@types/node-fetch": "^2.6",
        "@types/progress-stream": "^2.0",
        "@types/prompts": "^2.4",
        "@types/semver": "^7.5.8",
        "@types/tmp": "^0.2",
        "@wagmi/cli": "^2.1.4",
        "copyfiles": "^2",
        "eslint": "^8.57.0",
        "eslint-config-oclif": "^5.1.3",
        "eslint-config-oclif-typescript": "^3.1.7",
        "npm-run-all": "^4",
        "oclif": "^4.9.3",
        "rimraf": "^5",
        "ts-node": "^10",
        "tsconfig": "workspace:*",
        "tslib": "^2",
        "typescript": "^5.4.5",
        "vitest": "^1.5.3"
    },
    "oclif": {
        "bin": "cartesi",
        "dirname": "cartesi",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-help"
        ],
        "topicSeparator": " ",
        "macos": {
            "identifier": "io.cartesi.cli"
        }
    },
    "scripts": {
        "build": "run-s clean codegen compile copy-files",
        "clean": "rimraf dist",
        "codegen": "run-p codegen:wagmi",
        "codegen:wagmi": "wagmi generate",
        "compile": "tsc -b",
        "copy-files": "copyfiles -u 1 \"src/**/*.yaml\" \"src/**/*.env\" \"src/**/*.txt\" dist",
        "lint": "eslint \"src/**/*.ts*\"",
        "postpack": "rimraf oclif.manifest.json",
        "posttest": "pnpm lint",
        "prepack": "pnpm build && oclif manifest",
        "test": "vitest"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "bugs": "https://github.com/cartesi/cli/issues",
    "keywords": [
        "oclif"
    ],
    "types": "dist/index.d.ts"
}
