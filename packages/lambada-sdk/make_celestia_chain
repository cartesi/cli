#!/bin/bash
set -e
if [ -z "$1" ] || [ -z "$2" ] || [ -z "$3" ]; then
   echo "Syntax: make_celestia_chain <namespace ID> <mainnet|testnet> <starting block height>"
   exit 1
fi

output_path=/cartesi-dir
ipfs init
mkdir -p /tmp/celestia-app/gov/app
printf '{"base_image_cid":"%s"}' `cat $output_path/image/machine.car.cid` > /tmp/celestia-app/gov/app/info.json
printf '{"sequencer":{"type":"celestia","height":"%s","vm-id":"%s","network-type":"%s"}}' $3 $1 $2 > /tmp/celestia-app/gov/chain-info.json

ipfs add --cid-version=1 -r -Q /tmp/celestia-app > /tmp/cid.celestia
ipfs dag export `cat /tmp/cid.celestia` > $output_path/image/celestia-$2.car
CID=`cat /tmp/cid.celestia`

mv /tmp/cid.celestia $output_path/image/celestia-$2.car.cid
rm -rf /data/ipfs
