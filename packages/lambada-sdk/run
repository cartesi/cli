#!/bin/sh
AUTOMATIC_SUBSCRIBE=$(cat .cartesi/image/sample.car.cid)
echo AUTOMATIC_SUBSCRIBE=$AUTOMATIC_SUBSCRIBE
ANVIL_VERBOSITY=--silent
BLOCK_TIME=5
BLOCK_TIMEOUT=8

docker compose --file ./.cartesi/image/node/docker-compose-lambada.yaml \
	--file ./.cartesi/image/node/docker-compose-snapshot-volume-lambada.yaml \
	--file ./.cartesi/image/node/docker-compose-anvil.yaml  \
	--file ./.cartesi/image/node/docker-compose-prompt.yaml \
	--project-directory . \
	--project-name lambada-sdk-$AUTOMATIC_SUBSCRIBE \
	--progress quiet \
	up \
	--attach validator \
	--attach prompt